<div class="page-header">
  <h2>AIS Terms</h2>
</div>

<ul class="nav nav-tabs">
	<%= nav_tab_link_to ais_terms_path, "List", "glyphicon-list", class: "active" %>
	<%= nav_tab_link_to new_ais_term_path, "Add New", "glyphicon-plus" %>
	<%= nav_tab_link_to "#", "Details", "glyphicon-info-sign", class: "disabled" %>
	<%= nav_tab_link_to "#", "Edit", "glyphicon-pencil", class: "disabled" %>
	<%= nav_tab_link_to "#", "Delete", "glyphicon-remove", class: "disabled" %>
</ul>

<table class="table table-condensed table-striped table-hover">
	<thead>
	  <tr>
	    <th>Effective On</th>
	    <th>Spring</th>
	    <th>Summer</th>
	    <th>Fall</th>
			
			<th class="shrink"></th>
			<th class="shrink"></th>
			<th class="shrink"></th>
	  </tr>
	</thead>

	<tbody>
		<% @ais_terms.each do |ais_term| %>
		  <% if ais_term.is_current? %><tr class="success"><% else %><tr><% end %>
		    <td><%= ais_term.effective_on %></td>
		    <td><%= ais_term.spring %></td>
		    <td><%= ais_term.summer %></td>
		    <td><%= ais_term.fall %></td>
			
				<td>
					<%= link_to ais_term do -%>
					<span class="glyphicon glyphicon-info-sign"></span>
					<% end -%>
				</td>
				<td>
					<%= link_to edit_ais_term_path(ais_term) do -%>
					<span class="glyphicon glyphicon-pencil"></span>
					<% end -%>
				</td>
				<td>
					<%= link_to delete_ais_term_path(ais_term) do -%>
					<span class="glyphicon glyphicon-remove"></span>
					<% end -%>
				</td>
		  </tr>
		<% end %>
	</tbody>
</table>

	
	<div class="panel panel-default">
		<div class="panel-footer">
			<%= paginate @ais_terms %>
		</div>
	</div>
