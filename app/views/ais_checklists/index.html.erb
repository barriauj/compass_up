<div class="page-header">
  <h2>AIS Checklists</h2>
</div>

<ul class="nav nav-tabs">
	<%= nav_tab_link_to ais_checklists_path, "List", "glyphicon-list", class: "active" %>
	<%= nav_tab_link_to new_ais_checklist_path, "Add New", "glyphicon-plus" %>
	<%= nav_tab_link_to "#", "Details", "glyphicon-info-sign", class: "disabled" %>
	<%= nav_tab_link_to "#", "Edit", "glyphicon-pencil", class: "disabled" %>
	<%= nav_tab_link_to "#", "Delete", "glyphicon-remove", class: "disabled" %>
	<%= nav_tab_link_to show_import_ais_checklists_path, "Import", "glyphicon-import" %>
</ul>

<table class="table table-condensed table-striped table-hover">
	<thead>
	  <tr>
	    <th>PIDM</th>
	    <th>Term</th>
	    <th>Application No.</th>
	    <th>Requirement Code</th>
	    <th>Received Date</th>
	    <th>Item</th>
	    <th>Description</th>
	    <th>CKST Code</th>
	    <th>Mandatory</th>
			
			<th class="shrink"></th>
			<th class="shrink"></th>
			<th class="shrink"></th>
	  </tr>
	</thead>

	<tbody>
		<% @ais_checklists.each do |ais_checklist| %>
		  <tr>
		    <td><%= ais_checklist.banner_pidm %></td>
		    <td><%= ais_checklist.application_term %></td>
		    <td><%= ais_checklist.application_number %></td>
		    <td><%= ais_checklist.requirement_code %></td>
		    <td><%= ais_checklist.received_date %></td>
		    <td><%= ais_checklist.item %></td>
		    <td><%= ais_checklist.item_description %></td>
		    <td><%= ais_checklist.ckst_code %></td>
		    <td><%= ais_checklist.mandatory %></td>
			
				<td>
					<%= link_to ais_checklist do -%>
					<span class="glyphicon glyphicon-info-sign"></span>
					<% end -%>
				</td>
				<td>
					<%= link_to edit_ais_checklist_path(ais_checklist) do -%>
					<span class="glyphicon glyphicon-pencil"></span>
					<% end -%>
				</td>
				<td>
					<%= link_to are_you_sure_ais_checklist_path(ais_checklist) do -%>
					<span class="glyphicon glyphicon-remove"></span>
					<% end -%>
				</td>
		  </tr>
		<% end %>
	</tbody>
</table>

	
	<div class="panel panel-default">
		<div class="panel-footer">
			<%= paginate @ais_checklists %>
		</div>
	</div>
