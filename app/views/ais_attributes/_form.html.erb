<%= form_for(@ais_attribute) do |f| %>
  
	<%= render 'layouts/form_errors', record: @ais_attribute %>

  <% if @ais_attribute.errors.any? && @ais_attribute.errors.include?(:banner_pidm) %><div class="form-group has-error"><% else %><div class="form-group"><% end %>
    <%= f.label :banner_pidm, "PIDM", class: "col-sm-2 control-label" %>
		<div class="col-sm-10">
	    <%= f.text_field :banner_pidm, class: "form-control", placeholder: "PIDM" %>
			<p class="help-block">Required.</p>
		</div>
  </div>
	
  <div class="field">
    <%= f.label :application_term %><br />
    <%= f.text_field :application_term %>
  </div>
	
  <div class="field">
    <%= f.label :application_number %><br />
    <%= f.text_field :application_number %>
  </div>
	
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
	
  <div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
	    <%= f.submit "Submit", class: "btn btn-default" %>
		</div>
  </div>
	
<% end %>
