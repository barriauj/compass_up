<%= form_for @ais_attribute, html: { class: "form-horizontal", role: "form" } do |f| %>
  
	<%= render 'layouts/form_errors', record: @ais_attribute %>

  <% if @ais_attribute.errors.any? && @ais_attribute.errors.include?(:banner_pidm) %>
	<div class="form-group has-error">
	<% else %>
	<div class="form-group">
	<% end %>
    <%= f.label :banner_pidm, "PIDM", class: "col-sm-2 control-label" %>
		<div class="col-sm-10">
	    <%= f.text_field :banner_pidm, class: "form-control", placeholder: "PIDM" %>
			<p class="help-block">Required.</p>
		</div>
  </div>
	
  <% if @ais_attribute.errors.any? && @ais_attribute.errors.include?(:application_term) %>
	<div class="form-group has-error">
	<% else %>
	<div class="form-group">
	<% end %>
	  <%= f.label :application_term, "Term", class: "col-sm-2 control-label" %>
		<div class="col-sm-10">
	    <%= f.text_field :application_term, class: "form-control", placeholder: "Term" %>
			<p class="help-block">Required.</p>
		</div>
  </div>
	
  <% if @ais_attribute.errors.any? && @ais_attribute.errors.include?(:application_number) %>
	<div class="form-group has-error">
	<% else %>
	<div class="form-group">
	<% end %>
	  <%= f.label :application_number, "Application No.", class: "col-sm-2 control-label" %>
		<div class="col-sm-10">
	    <%= f.text_field :application_number, class: "form-control", placeholder: "Application No." %>
			<p class="help-block">Required.</p>
		</div>
  </div>
	
  <% if @ais_attribute.errors.any? && @ais_attribute.errors.include?(:name) %>
	<div class="form-group has-error">
	<% else %>
	<div class="form-group">
	<% end %>
	  <%= f.label :name, "Attribute", class: "col-sm-2 control-label" %>
		<div class="col-sm-10">
	    <%= f.text_field :name, class: "form-control", placeholder: "Attribute" %>
			<p class="help-block">Required.</p>
		</div>
  </div>
	
  <div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
	    <%= f.submit "Submit", class: "btn btn-default" %>
		</div>
  </div>
	
<% end %>
