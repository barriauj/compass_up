<div class="page-header">
  <h2>Import AIS Attributes</h2>
</div>

<ul class="nav nav-tabs">
	<li>
		<%= link_to ais_attributes_path do -%>
		   <span class="glyphicon glyphicon-list"></span> List
		<% end -%>
	</li>
	<li>
		<%= link_to new_ais_attribute_path do -%>
		   <span class="glyphicon glyphicon-plus"></span> Add New
		<% end -%>
	</li>
	<li class="active">
		<%= link_to show_import_ais_attributes_path do -%>
		   <span class="glyphicon glyphicon-import"></span> Import
		<% end -%>
	</li>
</ul>

<div class="panel panel-default panel-danger">
  <div class="panel-heading">
    <h3 class="panel-title">Warning! This will delete all records before importing.</h3>
  </div>
  <div class="panel-body">
		<%= form_tag import_ais_attributes_path, multipart: true, role: "form", class: "form-inline" do %>
			<div class="form-group">
				<%= file_field_tag :file %>
			</div>
			<button type="submit" class="btn btn-default btn-danger" name="commit"><span class="glyphicon glyphicon-import"></span> Import</button>
		<% end %>
	</div>
</div>
